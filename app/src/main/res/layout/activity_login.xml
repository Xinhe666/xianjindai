<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/base_white"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LoginActivity">
    <include layout="@layout/layout_toolbar"/>
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="手机号:"
                android:textColor="@color/bg_color_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.ant.cashant.view.editext.PowerfulEditText
                android:id="@+id/ed_phone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingRight="25dp"
                android:drawablePadding="15dp"
                app:leftDrawableWidth="20dp"
                app:leftDrawableHeight="20dp"
                android:lines="1"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:background="@null"
                android:inputType="phone"
                android:textSize="14sp"
                android:textColorHint="@color/gay"
                app:theme="@style/MyEditText"
                app:funcType="canClear"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="@color/gay"
            android:layout_height="1dp"
            />
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvcode"
                android:text="验证码:"
                android:textColor="@color/bg_color_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:background="@drawable/button_shape"/>
            <com.ant.cashant.view.editext.PowerfulEditText
                android:id="@+id/ed_code"
                android:layout_toRightOf="@id/tvcode"
                android:layout_toLeftOf="@id/tv_code"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingRight="25dp"
                android:drawablePadding="15dp"
                app:leftDrawableWidth="20dp"
                app:leftDrawableHeight="20dp"
                android:lines="1"
                android:hint="请输入验证码"
                android:maxLength="4"
                android:background="@null"
                android:inputType="number"
                android:textSize="14sp"
                android:textColorHint="@color/gay"
                app:theme="@style/MyEditText"
                app:funcType="canClear"
                />

        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="@color/gay"
            android:layout_height="1dp"
            />
        <com.allen.library.SuperButton
            android:id="@+id/bt_logon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            app:sCornersRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:sSelectorDisableColor="@color/kprogresshud_grey_color"
            app:sUseSelector="true"
            android:enabled="false"
            android:textSize="15sp"
            android:textColor="@color/gay"
            app:sSelectorNormalColor="@color/colorPrimary"
            app:sSelectorPressedColor="@color/press_color"
            android:text="登陆"/>
    </LinearLayout>

</LinearLayout>