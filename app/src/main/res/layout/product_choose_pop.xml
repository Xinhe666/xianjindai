<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/product_choose_pop"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_lottery"
    >
   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/bg_color_da"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@color/bg_color_ff"
       >
      <Button
          android:id="@+id/bt_default"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:layout_weight="1"
          android:background="@drawable/product_choose_pop_selector"
          android:textColor="@drawable/product_choose_pop_color_selector"
          android:textSize="12sp"
          android:text="默认"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="5dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="5dp"
          style="?android:attr/borderlessButtonStyle"
          />
      <Button
          android:id="@+id/bt1"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:layout_weight="1"
          android:background="@drawable/product_choose_pop_selector"
          android:textColor="@drawable/product_choose_pop_color_selector"
          android:textSize="12sp"
          android:text="金额从高到低"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="5dp"
          style="?android:attr/borderlessButtonStyle"

          />
      <Button
          android:id="@+id/bt2"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:layout_weight="1"
          android:background="@drawable/product_choose_pop_selector"
          android:textColor="@drawable/product_choose_pop_color_selector"
          android:textSize="12sp"
          android:text="利率从低到高"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="5dp"
          style="?android:attr/borderlessButtonStyle"

          />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@color/bg_color_ff"
       >
      <Button
          android:id="@+id/bt3"
          android:layout_width="105dp"
          android:layout_height="30dp"
          android:background="@drawable/product_choose_pop_selector"
          android:textColor="@drawable/product_choose_pop_color_selector"
          android:textSize="12dp"
          android:text="期限从高到低"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="10dp"
          style="?android:attr/borderlessButtonStyle"
          />
   </LinearLayout>

   <RelativeLayout
       android:id="@+id/empty_layout"
       android:background="#20000000"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       />

</LinearLayout>
