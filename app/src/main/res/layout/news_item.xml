<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@mipmap/logo"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/name"
            android:layout_toRightOf="@id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="13sp"
            android:lines="1"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:src="@mipmap/iv_news"
            android:layout_toRightOf="@+id/name"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_apply"
            android:layout_alignParentRight="true"
            android:layout_below="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="已有"
                android:textSize="10sp"
                android:lines="1"
                android:textColor="@color/text_color_66"
                android:layout_toLeftOf="@+id/main_product_item_tv5"
                />
            <TextView
                android:id="@+id/apply_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="简介"
                android:textSize="10sp"
                android:lines="1"
                android:textColor="#2196f3"
                android:layout_toLeftOf="@+id/main_product_item_tv4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="人申请"
                android:textSize="10sp"
                android:lines="1"
                android:textColor="@color/text_color_66"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/desc"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/layout_apply"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/logo"
            android:layout_below="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:textSize="11sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_66"
            />
    </RelativeLayout>
</RelativeLayout>